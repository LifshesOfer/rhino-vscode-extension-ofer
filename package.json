{
	"name": "rhino-language-support",
	"displayName": "Rhino Language Support",
	"description": "Syntax highlights and Language Server for Rhino API",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other",
		"Programming Languages"
	],
	"activationEvents": [
		"onCommand:rhino-language-support.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "rhino-language-support.helloWorld",
				"title": "Rhino: Hellow World"
			}
		],
        "languages": [
			{
				"id": "rhino",
				"aliases": ["Rhino", "rhino"],
				"extensions": [".rhino"],
				"configuration": "./language-configuration.json"
			}
		],
        "grammars": [
			{
				"language": "rhino",
				"scopeName": "source.rhino",
				"path": "./syntaxes/rhino.tmLanguage.json"
			}
		]		
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
