{
	"name": "rhino-language-support",
	"publisher": "RhinoAPI",
	"displayName": "rhino-language-support",
	"description": "",
	"version": "2.0.0",
	"repository": {
		"url": "https://github.com/savanna-projects/rhino-vscode-extension.git"
	},
	"engines": {
		"vscode": "^1.57.0"
	},
	"markdown": "github",
	"categories": [
		"Other",
		"Programming Languages",
		"Snippets"
	],
	"activationEvents": [
		"onCommand:Register-Rhino",
		"onCommand:Create-Project"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "Create-Project",
				"title": "Rhino: Creates a New Rhino Project"
			},
			{
				"command": "Format-Document",
				"title": "Rhino: Format the document under the active editor window"
			},
			{
				"command": "Invoke-TestCase",
				"title": "Rhino: Runs the automation test(s) from the currently open document"
			},
			{
				"command": "Register-Models",
				"title": "Rhino: Register all the models under 'Models' folder"
			},
			{
				"command": "Register-Plugins",
				"title": "Rhino: Register all the plugins under 'Plugins' folder"
			},
			{
				"command": "Register-Rhino",
				"title": "Rhino: Connect to Rhino, fetch Metadata & activate commands"
			},
			{
				"command": "Register-TestCase",
				"title": "Rhino: Creates a new Test Case(s) entity on the integrated application from the currently open document"
			},
			{
				"command": "Get-TestCase",
				"title": "Rhino: Gets a Test Case(s) specification(s) from the integrated application"
			}
		],
		"languages": [
			{
				"id": "rhino",
				"aliases": [
					"Rhino",
					"rhino"
				],
				"extensions": [
					".rhino",
					".rmodel"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "rhino",
				"scopeName": "source.rhino",
				"path": "./rhino-tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "rhino",
				"path": "./snippet-test-full.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^9.2.2",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"npm": "^8.5.4",
		"vsce": "^2.6.7"
	}
}
