{
  "Rhino Test Spec": {
    "prefix": [
      "rhinotest"
    ],
    "body": [
      "[test-id]         ${1:RHINO-01}",
      "[test-scenario]   verify that ${2:expected result} when ${3:action taken}",
      "[test-categories] ${4:Category1}, ${5:Category2}",
      "[test-priority]   ${6|1 - critical,2 - high,3 - medium,4 - low|}",
      "[test-severity]   ${7|1 - critical,2 - high,3 - medium,4 - low|}",
      "[test-tolerance]  ${8:0}%",
      "",
      "[test-data-provider]",
      "|address               |expected   |",
      "|----------------------|-----------|",
      "|https://www.google.com|google     |",
      "",
      "[test-actions]",
      "go to url {@address}",
      "send keys {automation is fun} into {//input[@name='q']}",
      "click on {//ul[@role='listbox']/li}",
      "wait {1500}",
      "close browser",
      "",
      "[test-expected-results]",
      "[1] verify that {url} match {@expected}"
    ],
    "description": "Rhino test case spec template including all available fields."
  }
}